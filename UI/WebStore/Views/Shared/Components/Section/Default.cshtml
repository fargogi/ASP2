@model IEnumerable<MyWebStore.DomainNew.ViewModels.SectionViewModel>

<h2>Категории</h2>

<div class="panel-group category-products" id="accordian">
	<!--category-products-->
	@foreach (var section in Model)
	{
		if (section.ChildSection.Count > 0)
		{
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a data-toggle="collapse" data-parent="#accordian" href="#@(section.Name.ToLower())">
							<span class="badge pull-right"><i class="fa fa-plus"></i></span>
							@(section.Name)
						</a>
					</h4>
				</div>
				<div id="@(section.Name.ToLower())" class="panel-collapse collapse">
					<div class="panel-body">
						<ul>
							@foreach (var child_section in section.ChildSection)
							{
								<li>
									<a asp-controller="Catalog" asp-action="Shop" asp-route-sectionId="@child_section.Id">
										@child_section.Name
									</a>
								</li>
							}

						</ul>
					</div>
				</div>
			</div>
		}
		else
		{
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a asp-controller="Catalog" asp-action="Shop" asp-route-SectionId="@(section.Id)">
							@(section.Name)
						</a>
					</h4>
				</div>
			</div>
		}

	}

</div><!--/category-products-->
