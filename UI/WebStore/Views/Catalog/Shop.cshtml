@model MyWebStore.DomainNew.ViewModels.CatalogViewModel
@{
    ViewData["Title"] = "Магазин";
    Layout = "_LayoutBreadCrumbs";
}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="row">
        <div class="col-sm-3">
            @await Html.PartialAsync("Partial/_LeftSideBar")
        </div>

        <div class="col-sm-9 padding-right">

            <div id="itemsContainer">

            @await Html.PartialAsync("Partial/_ProductItems", Model.Products)

            </div>

            <paging page-view-model="@Model.PageViewModel" page-action="Shop"
                    page-url-SectionId="@Model.SectionId"
                    page-url-BrandId="@Model.BrandId"></paging>
        </div>
    </div>
</section>
@section Scripts{
    <script src="~/jquery/jquery-loading-overlay/loadingoverlay.min.js"></script>
    <script src="~/js/Shop/ProductItem.js"></script>

    <script>
        $(function() {
            ProductItems.init({
                getUrl: "@Url.Action("GetFilteredItems","Catalog")"
            });
        });
    </script>
}
