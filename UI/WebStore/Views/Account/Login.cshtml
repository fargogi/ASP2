@model MyWebStore.DomainNew.ViewModels.LoginViewModel
@{
	ViewData["Title"] = "Логин";
	Layout = "_LayoutBase";
}

<section id="form">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-4 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Войти</h2>
					<form method="post" asp-action="login" asp-antiforgery="true">
						<input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
						<input asp-for="Password" placeholder="@nameof(Model.Password)" />
						<span>Запомнить
							<input asp-for="RememberMe" placeholder="@nameof(Model.RememberMe)" />
						</span>
						

						<button type="submit" class="btn btn-default">Войти</button>
					</form>
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->
